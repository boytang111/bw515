<image src='{{position=="dongbei"?"../../images/background1.png":"../../images/background.png"}}' mode='widthFix'></image>
<image src='../../images/gai_01.png' bindtap='startActive' mode='widthFix' style="display:{{showStatus_1==1?'block':'none'}}"></image>
<image catchtap='startActive' src='../../images/finger.png' mode='widthFix' style="display:{{showStatus_1==1?'block':'none'}}"></image>
<text catchtap='startActive' style="display:{{showStatus_1==1?'block':'none'}}">点击拉开瓶盖</text>
<image src='../../images/ribbon.png' mode='widthFix' style="display:{{showStatus_2==1?'block':'none'}}"></image>
<image src='../../images/gai_02.png' mode='widthFix' style="display:{{showStatus_3==1?'block':'none'}}"></image>
<image src='../../images/gai_03.png' mode='widthFix' style="display:{{showStatus_4==1?'block':'none'}}"></image>
<view catchtap='showStatus' style="display:{{showStatus_5==1?'block':'none'}}">
  <image src='../../images/prizeBack.png' mode='widthFix'></image>
  <text class='text' wx:if='{{id==0}}'>谢谢参与</text>
  <text class='text' wx:if='{{id!=0}}'>{{name}}</text>
  <text class='text2' wx:if='{{class_id==1}}'>我们将自动转入您的微信账户请留意</text>
  <text class='text2' wx:if='{{class_id==2}}'>我们将短信通知您，\n并于7个工作日内充值到账。</text>
  <text class='text2' wx:if='{{class_id==3}}'>我们将短信通知您，\n并于7个工作日内与您取得联系，\n请确保电话畅通。</text>
</view>