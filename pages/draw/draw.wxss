.title{
  font-size: 40rpx;
  text-align: center;
  font-weight: bolder;
  margin-top: 60rpx;
}
.count{
  text-align: center;
  font-size: 30rpx;
  margin-top: 30rpx;
}
.more{
  text-align: center;
  font-size: 24rpx;
  color: #8C8C8C;
  margin-top: 10rpx;
}
.more text{
  border-bottom: solid 1rpx #8C8C8C;
}
.content .text{
  border-bottom: solid 1rpx #8C8C8C;
}

.draw-container{
  height: 700rpx;
  margin-top: 20rpx;
  position: relative;
}
.draw-item{
  width: 212rpx;
  height: 320rpx;
  padding: 10rpx;
  background: white;
  border: solid 1rpx #e1e1e1;
  border-radius: 8rpx;
  position: absolute;
  top: 20rpx;
  left: calc(50% - 111rpx);
  transform-origin: 50% 100%;
  transition: all .2s ease-in;
}
.draw-item image{
  width: 100%;
  height: 100%;
}
.draw-item:nth-child(1){
  transform: rotate(-15deg) translateX(-120rpx);
}
.draw-item:nth-child(3){
  transform: rotate(15deg) translateX(120rpx);
}
.draw-item:nth-child(4){
  transform: rotate(-10deg) translate(-110rpx, 320rpx);
}
.draw-item:nth-child(5){
  transform: rotate(10deg) translate(110rpx, 320rpx);
}
.draw-item.active{
  z-index: 2;
  top: 20%;
  transform: scale(1.5) rotate(0) translate(0, 0);
}

.tips{
  text-align: center;
  margin-top: 60rpx;
}
.tips view:nth-child(1){
  font-size: 32rpx;
}
.tips view:nth-child(2){
  font-size: 24rpx;
  color: #8C8C8C;
}

.rule{
  text-align: center;
  font-size: 26rpx;
  color: #8C8C8C;
  margin-top: 30rpx;
}
.rule text{
  border-bottom: solid 1rpx #8C8C8C;
}

.black{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 3;
}
.more-container{
  background: white;
  position: absolute;
  top: 30%;
  left: 10%;
  right: 10%;
  border-radius: 10rpx;
  overflow: hidden;
}
.more-container .content{
  background: #eee;
  height: 225rpx;
  font-size: 30rpx;
  color: #3d3d3d;
  text-align: center;
}
.more-container .content .teach{
  font-size: 32rpx;
  color: black;
  padding-top: 30rpx;
}
.more-container .content .reason{
  font-size: 26rpx;
  color: #6D6D6D;
  margin-top: 30rpx;
}
.buttons{
  background: white;
  display: flex;
  font-size: 30rpx;
  line-height: 74rpx;
  padding: 20rpx 0;
  text-align: center;
}
.buttons text{
  flex: 1;
}
.buttons text:nth-child(1){
  color: #7a7a7a;
  border-right: solid 1rpx #bfbfbf;
}

.gift-container{
  position: absolute;
  top: 10%;
  left: 10%;
  right: 10%;
  background: #eee;
  border-radius: 8rpx;
  overflow: hidden;
}
.gift-container .congratulation{
  width: 90%;
  height: 130rpx;
  position: absolute;
  left: 5%;
  top: 30rpx;
}
.gift-title{
  font-size: 32rpx;
  color: #646464;
  text-align: center;
  margin-top: 200rpx;
}
.gift-container .prize{
  width: 60%;
  box-sizing: border-box;
  margin: auto;
  margin-top: 20rpx;
  font-size: 0;
  padding-bottom: 80rpx;
}
.gift-container .prize image{
  width: 100%;
  height: 290rpx;
}
.gift-container .prize .name{
  font-size: 34rpx;
  color: black;
  text-align: center;
  margin-top: 30rpx;
}
.gift-container .prize .explain{
  color: #8E8E8E;
  font-size: 26rpx;
  text-align: center;
  margin-top: 20rpx;
}
.clause{
  position:absolute;
  background:white;
  width:84%;
  height:70%;
  left:7%;
  top:5%;
  box-sizing:border-box;
  border-radius:14rpx;
}
.clause .title{
  display: block;
  font-size: 30rpx;
  color: #45000B;
  font-weight: bold;
  text-align: center;
  line-height: 3.5;
  margin-top: 0;
}
.clause .close{
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  top: 20rpx;
  right: 20rpx;
}
.term{
  display:block;
  background:#EEEEEE;
  height:73%;
  box-sizing:68%;
  padding:20rpx 60rpx;
  overflow-y:scroll;
  font-size:30rpx;
  text-indent:54rpx;
}