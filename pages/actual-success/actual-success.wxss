.title{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  color: #9b1317;
  padding-top: 40rpx;
  border-top: solid 1rpx #e1e1e1;
}
.title image{
  width: 70rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.product{
  display: block;
  margin: auto;
  width: 440rpx;
  height: 320rpx;
  margin-top: 20rpx;
  border: solid 1rpx #888;
}

.name{
  font-size: 34rpx;
  text-align: center;
  margin-top: 20rpx;
  color: #232323;
}
.cost{
  text-align: center;
  font-size: 32rpx;
  margin-top: 30rpx;
}
.cost text{
  color: #98000b;
}
.balance{
  text-align: center;
  font-size: 32rpx;
  color: #464040;
  margin-top: 6rpx;
}

.info{
  background: #f5f5f5;
  border-top: solid 1rpx #e1e1e1;
  border-bottom: solid 1rpx #e1e1e1;
  padding: 30rpx 60rpx;
  margin-top: 40rpx;
}
.input-item{
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
  font-size: 32rpx;
}
.input-item text{
  flex-shrink: 0;
}
.input-item view{
  margin-left: 30rpx;
  color: #787575;
}

.tips{
  font-size: 28rpx;
  text-align: center;
  padding: 30rpx 80rpx;
  color: #232323;
}