.flexos{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 11111
}
.personal{
  display: flex;
  align-items: center;
  background: #000;
  padding: 8rpx 24rpx;
}
.avatar{
  width: 82rpx;
  height: 82rpx;
  flex-shrink: 0;
  border-radius:50%;
}
.logo{
  height: 54rpx;
  width: 180rpx;
}
.nick-name{
  margin-left: 20rpx;
  color: white;
  font-size: 30rpx;
  flex: 1.5;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.score{
  flex: 2.5;
  font-size: 32rpx;
  color: white;
  padding-left: 10rpx;
  box-sizing:border-box;
}
.score text{
  vertical-align: middle;
  line-height: 40rpx;
}
.score text:last-child{
  font-size: 40rpx;
  font-weight: bold;
}
.container{
  height: calc(100vh - 98rpx);
  position: relative;
  font-size: 0;
  top: -3rpx;
}
.container image{
  width: 100%;
  height: 100%;
}
.pans{
  position: absolute;
  z-index: 2;
  top: 420rpx;
  right: 20rpx;
  display: flex;
}
.btn{
  text-align: center;
  margin: 0 18rpx;
}
.btn image{
  width: 110rpx;
  height: 110rpx;
}
.btn view{
  color: #515151;
  font-size: 22rpx;
  margin-top: 10rpx;
}

.black{
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 5;
}
.new{
  position: absolute;
  top: 25%;
  left: 20%;
  right: 20%;
  font-size: 0;
  background: #eee;
  border-radius: 10rpx;
}
.new image{
  width: 120%;
  height: 130rpx;
  margin-left: -10%;
  margin-top: -10%;
  margin-bottom: 20rpx;
}
.new .title{
  font-size: 30rpx;
  color: #000;
  text-align: center;
  margin-bottom: 40rpx;
}
.gift{
  color: #6D6D6D;
  font-size: 28rpx;
  text-align: center;
}
.new .confirm{
  background: white;
  font-size: 30rpx;
  color: black;
  margin-top: 40rpx;
  line-height: 2;
  border-radius: 0 0 10rpx 10rpx;
  padding: 20rpx 0;
  text-align: center;
  display: flex;
}
.new .confirm text{
  flex: 1;
  border-right: solid 1rpx #BFBFBF;
  color: #BFBFBF;
}
.new .confirm navigator{
  flex: 1;
}

.dialog-container{
  position: absolute;
  top: 10%;
  left: 8%;
  right: 8%;
  bottom: 10%;
  background: white;
  border-radius: 16rpx;
  box-sizing: border-box;
}
 .close{
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  top: 20rpx;
  right: 20rpx;
}
.dialog-container .title{
  font-size: 30rpx;
  color: #45000B;
  text-align: center;
  margin-top: 60rpx;
}
.dialog-container .sub-title{
  font-size: 26rpx;
  color: #888;
  text-align: center;
  margin-top: 10rpx;
}
.dialog-container .card{
  display: block;
  width: 560rpx;
  height: 340rpx;
  margin: auto;
  margin-top: 30rpx;
}

.agree-container{
  padding: 0 36rpx;
  display: flex;
  margin-top: 40rpx;
}
.agree-container .box{
  width: 30rpx;
  height: 30rpx;
  flex-shrink: 0;
  margin-right: 10rpx;
  border: solid 4rpx black;
  font-size: 0;
  border-radius: 4rpx;
}
.agree-container .box image{
  width: 80%;
  height: 80%;
  margin: auto;
}
.agree-container .text{
  font-size: 24rpx;
  color: #515151;
}
.agree-container .text text{
  border-bottom: solid 1rpx #515151;
}
.btnon{
  width: 402rpx;
  line-height: 76rpx;
  border-radius: 10rpx;
  text-align: center;
  color: white;
  font-size: 34rpx;
  background: black;
  margin: auto;
  margin-top: 40rpx;
}

.input-item{
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.input-item.textarea{
  align-items: flex-start;
}
.input-item input{
  width: 402rpx;
  height: 64rpx;
  flex-shrink: 0;
  box-sizing: border-box;
  border: solid 1rpx #B5B5B5;
  border-radius: 10rpx;
  padding: 0 10rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.input-item textarea{
  width: 402rpx;
  height: 188rpx;
  flex-shrink: 0;
  box-sizing: border-box;
  border: solid 1rpx #B5B5B5;
  border-radius: 10rpx;
  padding: 10rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.input-item text{
  flex: 1;
  font-size: 28rpx;
  text-align: right;
  color: #767575;
}
.input-item .sex{
  width: 402rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}
.sex{
  display: flex;
}
.sex>view{
  width: 30rpx;
  height: 30rpx;
  border: solid 1rpx #9C9C9C;
  border-radius: 16rpx;
  box-sizing: border-box;
  margin-right: 30%;
  position: relative;
}
.sex>view.active::before{
  content: '';
  display: block;
  width: 18rpx;
  height: 18rpx;
  border-radius: 10rpx;
  background: #9C9C9C;
  position: absolute;
  left: 5rpx;
  top: 5rpx;
}
.male::after{
  display: block;
  content: '先生';
  font-size: 28rpx;
  color: #767575;
  width: 60rpx;
  position: absolute;
  left: 50rpx;
  top: -6rpx;
}
.female::after{
  display: block;
  content: '女士';
  font-size: 28rpx;
  color: #767575;
  width: 60rpx;
  position: absolute;
  left: 50rpx;
  top: -6rpx;
}