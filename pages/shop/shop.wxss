.flexos{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 11111
}
.personal{
  display: flex;
  align-items: center;
  background: #000;
  padding: 8rpx 24rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 2;
}
.avatar{
  width: 82rpx;
  height: 82rpx;
  flex-shrink: 0;
  border-radius:50%;
}
.logo{
  height: 54rpx;
  width: 180rpx;
}
.nick-name{
  margin-left: 20rpx;
  color: white;
  font-size: 30rpx;
  flex: 1.5;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.score{
  flex: 2.5;
  font-size: 32rpx;
  color: white;
  padding-left: 10rpx;
  box-sizing:border-box;
}
.score text{
  vertical-align: middle;
  line-height: 40rpx;
}
.score text:last-child{
  font-size: 40rpx;
  font-weight: bold;
}

page{
  background: #e5e5e5;
  padding-top: 90rpx;
}
.brand{
  padding-right: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.brand-title{
  height: 60rpx;
  width: 280rpx;
  background: #3f3f3f;
  position: relative;
  color: white;
  font-size: 34rpx;
  font-weight: bolder;
  display: flex;
  align-items: center;
}
.brand-title::after{
  content: '';
  width: 0;
  height: 0;
  display: block;
  border-right: solid 40rpx transparent;
  border-top: solid 60rpx #3f3f3f;
  position: absolute;
  top: 0;
  right: -39rpx;
}
.brand-title .star{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  margin-left: 30rpx;
}
.brand navigator{
  font-size: 28rpx;
}

.good-row{
  display: flex;
  justify-content: flex-start;
  padding: 0 15rpx;
}
.good{
  width: 224rpx;
  font-size: 0;
  text-align: center;
  margin-right: 25rpx;
}
.good-row .good:nth-child(3){
  margin-right: 0;
}
.good image{
  width: 100%;
  height: 154rpx;
  object-fit: cover;
}
.good view{
  background: white;
  font-size: 20rpx;
  line-height: 40rpx;
  min-height: 50rpx;
}
.good .price{
  background: black;
  min-height: auto;
  color: white;
  font-size: 22rpx;
  line-height: 1.5;
  display: inline-block;
  padding: 0 18rpx;
  border-radius: 16rpx;
  margin-top: -11rpx;
}