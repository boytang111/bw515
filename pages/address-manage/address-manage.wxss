page{
  background: #f5f5f5;
}
.container{
  margin: 30rpx;
  background: white;
  border-radius: 16rpx;
  min-height: calc(100vh - 60rpx);
  box-sizing: border-box;
  border: solid 1rpx #e1e1e1;
}
.add-line{
  line-height: 108rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: solid 1rpx #f1f1f1;
  font-size: 34rpx;
}
.add-line .add{
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  border: solid 2rpx black;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.address{
  padding: 50rpx 30rpx;
  display: flex;
  align-items: center;
}
.address .info{
  flex: 1;
}
.info view:nth-child(1){
  display: flex;
  align-items: center;
}
.info view:nth-child(1) text:nth-child(1){
  font-size: 34rpx;
  margin-right: 30rpx;
}
.info view:nth-child(1) text:nth-child(2){
  font-size: 32rpx;
}
.info view:nth-child(2){
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #7E7E7E;
}
.info .brand{
  padding: 4rpx 28rpx;
  color: black;
  border-radius: 6rpx;
  margin-left: 20rpx;
  background: #E7E7E7;
}
.address navigator{
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
}
.address navigator image{
  width: 100%;
  height: 100%;
}