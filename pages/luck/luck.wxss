.title{
  font-size: 34rpx;
  color: #45000B;
  text-align: center;
  margin-top: 80rpx;
}
.content{
  padding: 80rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.content image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  flex-shrink: 0;
  margin-top: 20rpx;
}
.content image.active{
  border: solid 6rpx rgba(230,23,29,.6);
}

.rule{
  text-align: center;
  margin-top: 80rpx;
  font-size: 28rpx;
  color: #707070;
}
.rule text{
  border-bottom: solid 1rpx #707070;
}
.btn{
  width: 402rpx;
  line-height: 86rpx;
  text-align: center;
  color: white;
  margin: auto;
  margin-top: 80rpx;
  background: black;
  border-radius: 16rpx;
}


.black{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
}
.gift-container{
  position: absolute;
  top: 30%;
  left: 20%;
  right: 20%;
  background: #eee;
  border-radius: 8rpx;
}
.gift-container .congratulation{
  width: 110%;
  height: 130rpx;
  position: absolute;
  left: -5%;
  top: -50rpx;
}
.gift-title{
  font-size: 32rpx;
  color: #646464;
  text-align: center;
  margin-top: 100rpx;
}
.gift-container .prize{
  background: white;
  width: 242rpx;
  padding: 12rpx;
  box-sizing: border-box;
  margin: auto;
  margin-top: 20rpx;
  border-radius: 6rpx 6rpx 0 0;
  font-size: 0;
}
.gift-container .prize image{
  width: 100%;
  height: 130rpx;
}
.gift{
  width: 242rpx;
  margin: auto;
  line-height: 52rpx;
  font-size: 28rpx;
  color: black;
  background: white;
  text-align: center;
  border-radius: 0 0 6rpx 6rpx;
}
.look-for{
  line-height: 100rpx;
  background: white;
  text-align: center;
  font-size: 34rpx;
  margin-top: 20rpx;
  border-radius: 0 0 8rpx 8rpx;
}