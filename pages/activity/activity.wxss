.title{
  background: #888;
  text-align: center;
  color: white;
  line-height: 70rpx;
  font-size: 36rpx;
}
.banner{
  display: block;
  width: 100%;
  height: 500rpx;
}
.des{
  padding: 0 50rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
  text-align: center;
}
.address{
  text-align: center;
  font-size: 34rpx;
  margin-top: 30rpx;
}
.position{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}
.position text{
  font-size: 24rpx;
  color: #888;
  border-bottom: solid 1rpx #888;
}
.position image{
  width: 20rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.near{
  text-align: center;
  padding: 0 100rpx;
  color: #888;
  font-size: 36rpx;
  margin-top: 50rpx;
}
.city{
  text-align: center;
  color: #333333;
  font-size: 32rpx;
  margin-top: 20rpx;
}
.city text{
  border-bottom: solid 1rpx #333;
}
.map{
  margin-top: 40rpx;
  width: 100%;
  height: 300rpx;
  position: relative;
}
.map_map{
  width: 100%;
  height: 100%;
}
.map_mack{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .8);
  color: #fff;
  box-sizing: border-box;
  font-size: 50rpx;
  padding:15% 40%;
}