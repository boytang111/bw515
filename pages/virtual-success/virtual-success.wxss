.title{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  color: #9b1317;
  padding-top: 40rpx;
  border-top: solid 1rpx #e1e1e1;
}
.title image{
  width: 70rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.product{
  display: block;
  margin: auto;
  width: 440rpx;
  height: 320rpx;
  margin-top: 20rpx;
  border: solid 1rpx #888;
}

.name{
  font-size: 34rpx;
  text-align: center;
  margin-top: 20rpx;
  color: #232323;
}
.cost{
  text-align: center;
  font-size: 32rpx;
  margin-top: 30rpx;
}
.cost text{
  color: #98000b;
}
.balance{
  text-align: center;
  font-size: 32rpx;
  color: #464040;
  margin-top: 6rpx;
}

.info{
  background: #f5f5f5;
  border-top: solid 1rpx #e1e1e1;
  border-bottom: solid 1rpx #e1e1e1;
  padding: 60rpx;
  margin-top: 40rpx;
}
.code{
  display: flex;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
}
.code>view{
  width: 172rpx;
  height: 56rpx;
  background: #363636;
  color: white;
  text-align: center;
  line-height: 56rpx;
  border-radius: 8rpx;
  margin-left: 30rpx;
}
.info navigator{
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
}
.info navigator text{
  border-bottom: solid 1rpx #363636;
}

.more{
  font-size: 26rpx;
  text-align: center;
  margin-top: 40rpx;
}
.more text{
  border-bottom: solid 1rpx #363636;
}