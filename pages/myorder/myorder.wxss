page{
  background: #f5f5f5;
}

.personal{
  display: flex;
  align-items: center;
  background: #000;
  padding: 8rpx 24rpx;
}
.avatar{
  width: 82rpx;
  height: 82rpx;
  flex-shrink: 0;
  border-radius: 50%;
}
.logo{
  height: 54rpx;
  width: 180rpx;
}
.nick-name{
  margin-left: 20rpx;
  color: white;
  font-size: 30rpx;
  flex:.5;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.score{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: white;
}

.score text{
  vertical-align: middle;
  line-height: 40rpx;
}
.score text:last-child{
  font-size: 40rpx;
  font-weight: bold;
}
.title{
  background: #888;
  text-align: center;
  color: white;
  line-height: 70rpx;
  font-size: 36rpx;
}

.view{
  width: 100%;
  font-size: 40px;
  color: #727272;
  text-align: center;
  padding-top: 50rpx;
}