.product-photo{
  width: 100%;
  height: 500rpx;
}
.product-photo image{
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.cost{
  font-size: 46rpx;
  color: #960000;
  text-align: center;
  margin-top: 30rpx;
}
.original-price{
  font-size: 30rpx;
  color: #464040;
  text-align: center;
  margin-top: 6rpx;
}
.title{
  font-size: 38rpx;
  color: #232323;
  font-weight: bolder;
  text-align: center;
  margin-top: 40rpx;
}
.description{
  font-size: 25rpx;
  color: #232323;
  padding: 0 60rpx;
  margin-top: 30rpx;
  padding-bottom: 250rpx;
}

.exchange{
  position: fixed;
  left: 0;
  bottom: 0;
  background: white;
  width: 100%;
  border-top: solid 1rpx #e1e1e1;
}
.exchange .button{
  background: #232323;
  color: white;
  width: 320rpx;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  margin: auto;
  margin-top: 60rpx;
  border-radius: 16rpx;
}
.exchange .button.refuse{
  background: #bfbfbf;
}
.exchange navigator{
  font-size: 26rpx;
  text-align: center;
  margin: 36rpx;
  color: #232323;
}
.exchange navigator text{
  border-bottom: solid 1rpx #232323;
}

.black{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
}
.more-container{
  background: white;
  position: absolute;
  top: 30%;
  left: 10%;
  right: 10%;
  border-radius: 10rpx;
  overflow: hidden;
}
.more-container .close{
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.more-container .get-title{
  font-size: 32rpx;
  text-align: center;
  line-height: 3;
  margin-top: 20rpx;
}
.more-container .get-button{
  width: 450rpx;
  height: 80rpx;
  background: #363636;
  margin: auto;
  color: white;
  text-align: center;
  line-height: 80rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
}
.more-container navigator{
  text-align: center;
  margin-bottom: 20rpx;
}
.more-container navigator text{
  font-size: 26rpx;
  color: #000000;
  border-bottom: solid 1rpx #000000;
  line-height: 3;
}

.more-container .content{
  background: #eee;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #3d3d3d;
}
.more-container .buttons{
  display: flex;
  font-size: 30rpx;
  line-height: 74rpx;
  padding: 20rpx 0;
  text-align: center;
}
.more-container .buttons text{
  flex: 1;
}
.more-container .buttons text:nth-child(1){
  color: #7a7a7a;
  border-right: solid 1rpx #bfbfbf;
}

.comfort{
  font-size: 24rpx;
  color: #818181;
  text-align: center;
}
.get-button.lose{
  margin: 30rpx auto;
}

.coupon{
  background: #0080FF;
  width: 548rpx;
  height: 214rpx;
  margin: auto;
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  position: relative;
}
.coupon::before{
  content: '';
  display: block;
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background: white;
  position: absolute;
  top: calc(50% - 25rpx);
  left: -25rpx;
}
.coupon::after{
  content: '';
  display: block;
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background: white;
  position: absolute;
  top: calc(50% - 25rpx);
  right: -25rpx;
}
.coupon image{
  width: 274rpx;
  height: 160rpx;
}
.coupon .text{
  font-size: 32rpx;
  height: 100%;
  color: white;
  flex: 1;
  margin-right: 20rpx;
  border-right: dashed 1rpx white;
}
.coupon .text view{
  transform: rotate(-30deg) translate(-40rpx, 50rpx);
  font-style: italic;
}
.prize-name{
  font-size: 28rpx;
  text-align: center;
  font-weight: bolder;
  margin-top: 20rpx;
}


.gift-container{
  position: absolute;
  top: 30%;
  left: 20%;
  right: 20%;
  background: #eee;
  border-radius: 8rpx;
}
.gift-container .congratulation{
  width: 110%;
  height: 130rpx;
  position: absolute;
  left: -5%;
  top: -50rpx;
}
.gift-title{
  font-size: 32rpx;
  color: #646464;
  text-align: center;
  margin-top: 100rpx;
}
.gift-container .prize{
  background: white;
  width: 242rpx;
  padding: 12rpx;
  box-sizing: border-box;
  margin: auto;
  margin-top: 20rpx;
  border-radius: 6rpx 6rpx 0 0;
  font-size: 0;
}
.gift-container .prize image{
  width: 100%;
  height: 130rpx;
}
.gift{
  width: 242rpx;
  margin: auto;
  line-height: 52rpx;
  font-size: 28rpx;
  color: white;
  background: #888;
  text-align: center;
  border-radius: 0 0 6rpx 6rpx;
}
.look-for{
  line-height: 100rpx;
  background: white;
  text-align: center;
  font-size: 34rpx;
  margin-top: 20rpx;
  border-radius: 0 0 8rpx 8rpx;
}