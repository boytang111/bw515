.bg{
  width: 100%;
  height: 590rpx;
  display: block;
}
.grade{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  font-size: 28rpx;
  color: white;
  text-align: center;
  line-height: 94rpx;
}
.grade text{
  font-size: 32rpx;
  font-weight: bolder;
}
.grade navigator{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  left: 40rpx;
  top: 29rpx;
}
.grade image{
  width: 100%;
  height: 100%;
  display: block;
}
.card{
  position: absolute;
  left: 23rpx;
  top: 90rpx;
  width: 704rpx;
  height: 428rpx;
  background: #9B9B9B;
  box-sizing: border-box;
  border: solid 14rpx white;
  border-radius: 16rpx;
  z-index: 2;
}

.operation{
  background: #F7F7F7;
  width: 676rpx;
  position: absolute;
  left: 37rpx;
  top: 518rpx;
  border: solid 1rpx #e1e1e1;
  box-sizing: border-box;
}
.operation .title{
  font-size: 39rpx;
  color: #45000B;
  text-align: center;
  margin-top: 20rpx;
}
.operation .des{
  font-size: 24rpx;
  text-align: center;
  color: #888888;
}
.ope{
  text-align: center;
  margin-top: 30rpx;
}
.ope image{
  width: 80rpx;
  height: 56rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.ope text{
  font-size: 24rpx;
  line-height: 24rpx;
  vertical-align: middle;
  border-bottom: solid 1rpx #888;
}
.default{
  font-size: 24rpx;
  text-align: center;
  margin-top: 30rpx;
}
.default text{
  border-bottom: solid 1rpx #888;
}
.btn{
  width: 450rpx;
  height: 96rpx;
  background: #363636;
  border-radius: 16rpx;
  color: white;
  font-size: 34rpx;
  line-height: 96rpx;
  text-align: center;
  margin: 40rpx auto;
}